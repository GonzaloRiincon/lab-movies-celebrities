<h2>Add a new Movie</h2>
<br>
<div class="row justify-content-center">

    <div class="col-md-6 card">
        <form action="/movies/create" method="POST">
            <div class="mb-3">
                <label class="fs-2 fw-bold" for="title" class="form-label">Movie title</label>
                <input type="text" class="form-control" id="title" name="title">
            </div>

            <div class="mb-3">
                <label class="fs-2 fw-bold" for="genre" class="form-label">Genre</label>
                <input type="text" class="form-control" id="genre" name="genre">
            </div>

            <div class="mb-3">
                <label class="fs-2 fw-bold" for="plot" class="form-label">Plot</label>
                <input type="text" class="form-control" id="plot" name="plot">
            </div>
            <div class="mb-3">
                <label class="fs-2 fw-bold" for="cast" class="form-label">Cast</label>
                <select multiple class="form-select" name="cast" id="cast">
                    {{#each celebrities}}
                    <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>

            </div>
            <div class="d-grid mt-5 mb-4">
                <button type="submit" class="btn btn-dark btn-lg">Add new Movie</button>
            </div>
        </form>
    </div>
</div>